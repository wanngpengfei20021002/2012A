{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "incremental": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noImplicitThis": true
  },
  "include": [
    "src/**/*.ts",
    "src/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/*.tsx",
    "src/**/*.vue",
    "src/typings/*.d.ts",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "extends": "./paths.json"
}